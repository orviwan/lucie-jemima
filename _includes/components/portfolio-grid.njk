<section class="page-section portfolio" id="portfolio">
  <div class="container">

    <div class="row">
      {% for work in worklist | reverse %}
        <div class="col-md-6 col-lg-4">
          <div class="portfolio-item mx-auto">
            <a href="{{ work.url | url }}">
              <img class="img-fluid" src="{{ work.data.thumbnail }}" alt="{{ work.data.title }}" title="{{ work.data.title }}"/>
            </a>
          </div>
        </div>
      {% endfor %}
    </div>

  </div>
</section>