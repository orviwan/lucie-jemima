section: home
---

<header class="masthead bg-white text-secondary text-center">
  <div class="container d-flex align-items-center flex-column">

    <!-- Masthead Avatar Image -->
    <img class="masthead-avatar mb-5" src="/static/img/avataaars.svg" alt="">

    <!-- Masthead Heading -->
    <h1 class="masthead-heading text-uppercase mb-0">
      Lucie Jemima
    </h1>

    <!-- Icon Divider -->
    <div class="divider-custom divider-light">
      <div class="divider-custom-line"></div>
      <div class="divider-custom-icon">
        <i class="fas fa-star"></i>
      </div>
      <div class="divider-custom-line"></div>
    </div>

    <!-- Masthead Subheading -->
    <p class="masthead-subheading font-weight-light mb-0">Graphic Designer - Illustrator - Amazing Human</p>

  </div>
</header>

{% set worklist = collections.work %}
{% include "components/portfolio.njk" %}

<div class="container d-flex align-items-center flex-column">
  <div class="col-lg-8">
    <div class="wrapper">
      <div class="content-main">
        {{ layoutContent | safe }}
      </div>
    </div>
  </div>
</div>