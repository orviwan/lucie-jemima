---
layout: layouts/base.njk
section: work
---

{% set title %}{{ title }} ({{ year }}){% endset %}
{% include "components/pagetitle.njk" %}

<div class="container d-flex align-items-center flex-column">
  <div class="col-lg-12">
    <div class="wrapper">
      <div class="content-main">
        {% if headerimage %}
          <div class="text-center">
            <img class="img-fluid" src="{{ headerimage }}" alt="{{ title }}" title="{{ title }} - {{ subtitle }}" />
          </div>
        {% endif %}
        <article>
          {{ layoutContent | safe }}
        </article>
      </div>
    </div>
  </div>
</div>


<div class="masthead2 bg-white text-secondary text-center">
    <div class="divider-custom divider-light">
      <div class="divider-custom-line"></div>
      <div class="divider-custom-icon">
        <h1>More Portfolio</h1>
      </div>
      <div class="divider-custom-line"></div>
    </div>
</div>

{% set worklist = collections.work %}
{% include "components/portfolio-grid.njk" %}